extends layout.pug

block content 
  article.grid-container.portfolio-intro
    div
      h1 My Portfolio
      p.lead.text-light
        | Welcome to my online portfolio. Here you can browse through some of my persosnal my projects.
  article.grid-container.portfolio-index
    .grid-x.grid-margin-x.small-up-1.medium-up-2.large-up-3
      div.filters
        h6 Filters
        a(class=`techList techListFilter ${selected ? '' : "techSelected"}` href=`/`) All
        each tech in technologiesList
          a(class=`techList techListFilter ${selected && selected === tech ? 'techSelected' : ''}` href=`/type/${tech}`)= tech
      each project, index in projects
        if !project.hidden 
          .cell
            a(href=`/project/${index}`)
              img.thumbnail(src=project.image_thumbnail ? project.image_thumbnail : '/images/noImage.webp')
              h5= project.project_name
              each tech in project.technologies
                div(class=`techList`)= tech
      
