extends layout.pug

block content 
  nav.grid-container.portfolio-breadcrumb
    a(href='/') ‚Üê Back
  article.grid-container.portfolio-intro.portfolio-project
    .grid-x
      .cell.small-6.medium-9.large-9
        h1= project.project_name
        p.lead.text-light
          | #{project.description}
      .cell.portfolio-meta.small-6.medium-2.large-3
        h6 Technologies
        ul
          each tech in project.technologies
            li= tech
        a.button.expanded(href=project.URL target="_blank") 
          i.fa-regular.fa-eye &nbsp;
          span Live Demo
        a.button.expanded(href=project.GitHub target="_blank") 
          i.fa-brands.fa-github &nbsp;
          span GitHub Repo
    each image in project.image_urls
      img.image(src=image)